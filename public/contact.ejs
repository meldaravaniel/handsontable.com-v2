<section class="contact gap-bottom-small">

    <div class="row">
        <div class="columns">
            <h1 class="text-center size-large gap-top-medium gap-bottom-small">Contact us<br/>
                <span>Let's get in touch</span>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="large-12 large-centered columns">
            <div class="row">
                <div class="small-12 medium-6 columns">
                    <div id="form-sent" class="notification success">Thanks for contacting us. We'll get back to you very soon.</div>
                    <div id="form-error" class="notification error">Oops! We were unable to send the form.
                        Please check the invalid fields and try again.
                    </div>

                    <form id="contact-form" class="clearfix" action="https://my.handsontable.com/api/contact" method="post">
                        <div class="selectbox">
                            <select required name="category">
                                <option value="" disabled selected>Select category</option>
                                <option value="general_question">General question</option>
                                <option value="technical_support">Technical support</option>
                                <option value="enterprise_inquiry">Enterprise/OEM inquiry</option>
                                <option value="request_for_quotation">Request for quotation</option>
                                <option value="request_for_discount">Request for discount</option>
                                <option value="business_opportunity">Business opportunity</option>
                            </select>
                            <svg>
                                <use xlink:href="#arrow_down_icon"></use>
                            </svg>
                        </div>
                        <input type="hidden" placeholder="License ID" name="orderId"/>
                        <input type="text" placeholder="Full name" name="name"/>
                        <input type="text" placeholder="Company name" name="companyName"/>
                        <input type="email" required placeholder="Email address" name="email"/>
                        <textarea placeholder="Your message" required name="body"></textarea>
                        <input type="hidden" name="returnTo" value="/contact.html"/>
                        <input type="submit"
                               class="btn size-large bg-blue bg-lighten hover-moveup text-white shadow right"
                               value="Send"/>
                    </form>
                </div>
                <div class="small-12 medium-offset-1 medium-5 columns">
                    <h3>Company details</h3>
                    <div class="office">
                        <p>
                            Handsoncode sp. z o.o.<br/>
                            Aleja ZwyciÄ™stwa 96/98<br/>
                            81-451 Gdynia<br/>
                            Poland
                        </p>
                        <p>VAT EU: PL5862294002</p>
                        <p>
                            <strong>Business hours</strong> <br/>
                            8:00 AM - 5:00 PM CET
                        </p>
                        <a href="mailto:hello@handsontable.com">hello@handsontable.com</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>